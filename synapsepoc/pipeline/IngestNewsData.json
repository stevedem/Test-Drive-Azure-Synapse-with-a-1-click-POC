{
	"name": "IngestNewsData",
	"properties": {
		"activities": [
			{
				"name": "Copy News API",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['source']['id']"
								},
								"sink": {
									"name": "id"
								}
							},
							{
								"source": {
									"path": "['source']['name']"
								},
								"sink": {
									"name": "name"
								}
							},
							{
								"source": {
									"path": "['author']"
								},
								"sink": {
									"name": "author"
								}
							},
							{
								"source": {
									"path": "['title']"
								},
								"sink": {
									"name": "title"
								}
							},
							{
								"source": {
									"path": "['url']"
								},
								"sink": {
									"name": "url"
								}
							},
							{
								"source": {
									"path": "['publishedAt']"
								},
								"sink": {
									"name": "publishedAt"
								}
							}
						],
						"collectionReference": "$['articles']"
					}
				},
				"inputs": [
					{
						"referenceName": "NewsAPI",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "NewsCSV",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}